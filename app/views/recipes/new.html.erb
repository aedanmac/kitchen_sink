<h1>Add a new recipe!</h1>

<%= form_for @recipe do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :directions %>
        <%= f.text_field :directions %>
    </div>

    <div>
        <%= f.label :ingredients %>
        <%= f.text_field :ingredients %>
    </div>
    <div>
        <%= simple_form_for @recipe, :html => {:multipart => true} do |f| %>
       
    </div>  
    

    <%= f.submit "Add new recipe!" %>

<% end %>

<%= link_to "Back to the list!", recipes_path %>

<% end %>
