<h1>Edit this recipe!</h1>

<%= form_for @recipe do |f| %>

    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :directions %>
        <%= f.text_field :directions %>
    </div>

    <div>
        <%= f.label :ingredients %>
        <%= f.text_field :ingredients %>
    </div>

    <%= f.submit "Submit these changes!" %>

<% end %>

<%= link_to "Back to the list!", recipes_path %>